<h1>Listing depts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Hospital</th>
    <th>Location</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @depts.each do |dept| %>
  <tr>
    <td><%= dept.name %></td>
    <td><%= dept.hospital %></td>
    <td><%= dept.location %></td>
    <td><%= link_to 'Show', dept %></td>
    <td><%= link_to 'Edit', edit_dept_path(dept) %></td>
    <td><%= link_to 'Destroy', dept, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

