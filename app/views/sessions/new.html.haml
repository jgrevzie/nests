



- if flash[:alert]
	#notice
	= flash[:alert]

= form_tag do
	%fieldset
		%legend CathTraq - Please Log In
		#username
			%label{for: "username"}Name:
			%br
			= text_field_tag :username, params[:username]
		#password
			%label{for: "password"}Password:
			%br
			= password_field_tag :password, params[:password]
	#submit
		= submit_tag "Login"
